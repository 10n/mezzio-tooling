{
    "name": "zendframework/zend-expressive-tooling",
    "description": "Migration and development tooling for Expressive",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "http",
        "middleware",
        "psr",
        "psr-7"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git://github.com/webimpress/zend-component-installer.git"
        },
        {
            "type": "vcs",
            "url": "git://github.com/webimpress/zf-composer-autoloading.git"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-code": "^3.1 || ^2.6.3",
        "zendframework/zend-component-installer": "dev-refactor as 0.7.0",
        "zendframework/zend-expressive": "^2.0 || dev-2.0.X@dev",
        "zendframework/zend-stdlib": "^3.1",
        "zendframework/zend-stratigility": "^2.0",
        "zfcampus/zf-composer-autoloading": "dev-feature/console-helper as 2.0.0"
    },
    "require-dev": {
        "malukenho/docheader": "^0.1.5",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^6.0.7 || ^5.7.14",
        "zendframework/zend-coding-standard": "~1.0.0"
    },
    "autoload": {
      "psr-4": {
        "Zend\\Expressive\\Tooling\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "ZendTest\\Expressive\\Tooling\\": "test/"
      }
    },
    "bin": [
        "bin/expressive-migrate-original-messages",
        "bin/expressive-pipeline-from-config",
        "bin/expressive-scan-for-error-middleware",
        "bin/expressive-module"
    ],
    "scripts": {
        "check": [
            "@license-check",
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "license-check": "vendor/bin/docheader check src/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
